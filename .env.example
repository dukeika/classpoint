# ClassPoint Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================================================
# SECURITY NOTE: In production, JWT_SECRET and DATABASE_URL should be stored
# in AWS Secrets Manager, not in environment variables.
# See docs/SECRETS_MANAGEMENT.md for setup instructions.
# ============================================================================

# Environment
NODE_ENV=development # development | production | staging

# Database Configuration
# In production: Stored in AWS Secrets Manager as classpoint/{env}/database
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# AWS Configuration
AWS_REGION=af-south-1
AWS_ACCOUNT_ID=your-account-id

# Cognito Configuration
COGNITO_USER_POOL_ID_STAFF=your-staff-pool-id
COGNITO_CLIENT_ID_STAFF=your-staff-client-id
COGNITO_USER_POOL_ID_HOUSEHOLD=your-household-pool-id
COGNITO_CLIENT_ID_HOUSEHOLD=your-household-client-id
COGNITO_USER_POOL_ID_STUDENT=your-student-pool-id
COGNITO_CLIENT_ID_STUDENT=your-student-client-id

# S3 Storage
S3_UPLOADS_BUCKET=your-uploads-bucket
S3_LOGS_BUCKET=your-logs-bucket

# Application Configuration
PORT=3000
API_URL=http://localhost:3000
WEB_URL=http://localhost:3001

# JWT Configuration
# In production: Stored in AWS Secrets Manager as classpoint/{env}/jwt-secret
JWT_SECRET=change-this-to-a-secure-secret
JWT_EXPIRATION=1d

# Secrets Manager Configuration (Production Only)
# These specify which secrets to fetch from AWS Secrets Manager
# JWT_SECRET_NAME=classpoint/prod/jwt-secret
# DATABASE_SECRET_NAME=classpoint/prod/database

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug # debug | info | warn | error

# Notifications
NOTIFICATIONS_ENABLED=true # Set to false to disable all notifications
NOTIFICATION_FROM_EMAIL=noreply@classpoint.ng # From email address for notifications
